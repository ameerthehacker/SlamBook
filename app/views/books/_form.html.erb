<%= render 'shared/errors', :obj=>@book %>
<%= form_for @book, :html => { :class => 'form-horizontal', :id => 'frm-new-book' } do |f| %>
    <div class="form-group">
        <%= f.label :title, :class => 'control-label col-sm-2' %>
        <div class="col-sm-10">
            <%= f.text_field :title, :class => 'form-control', :placeholder => 'Title of the slam book' %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :description, :class => 'control-label col-sm-2' %>    
        <div class="col-sm-10"> 
            <%= f.text_area :description, :class => 'form-control', :placeholder => 'Something about the slam book'  %>
        </div>
    </div>
    <div class="questions">
        <%= f.fields_for :questions do |builder| %>
            <div class="question">
                <%= render 'question_fields', :builder => builder %>                
            </div>
        <% end %>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-2">
            <%= link_to_add_fields 'Add Question', f, :questions %>            
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-2">
            <%= f.submit :class => 'btn btn-lg btn-success' %>
        </div>
    </div>
<% end %>