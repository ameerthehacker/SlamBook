<div class="form-group">
    <%= builder.label :question, :class => 'control-label col-sm-2' %>
    <div class="col-sm-10">
        <div class="input-group">
            <%= builder.text_field :question, :class => 'form-control', :placeholder => 'Your question to the slammy' %>        
            <div class="input-group-btn">
                <%= builder.hidden_field :_destroy %>
                <%= link_to icon('trash'), '#', :class => 'btn btn-danger btn-remove-question' %>     
            </div>
        </div>
    </div>
</div>
<div class="form-group">
    <%= builder.label :question_type, :class => 'control-label col-sm-2' %>
    <div class="col-sm-10">
        <label class="radio-inline">
            <%= builder.radio_button :question_type, 'textarea', :checked => builder.object.question_type == 'textarea', :class => 'rad-question-type', :data => { :index => builder.index } %>Paragaraph
        </label>
        <label class="radio-inline">
            <%= builder.radio_button :question_type, 'radio', :checked => builder.object.question_type == 'radio' , :class => 'rad-question-type', :data => { :index => builder.index } %>Single Answer
        </label>
        <label class="radio-inline">
            <%= builder.radio_button :question_type, 'checkbox', :checked => builder.object.question_type == 'checkbox', :class => 'rad-question-type', :data => { :index => builder.index } %>Multiple Answers
        </label>
    </div>
</div>
<div class="<%= builder.index %> <%= builder.object.question_type == 'textarea' ? 'hidden ' : '' %>">
    <div class="form-group">
        <%= builder.label :question_options, "Options", :class => 'control-label col-sm-2' %>
        <div class="options-<%= builder.index %>">
            <%= builder.fields_for :question_options do |option_builder| %>
                <div class="option">
                    <%= render 'question_option_fields', :builder => option_builder %>            
                </div>
            <% end %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-3">
            <%= link_to_add_fields 'Add Option', builder, :question_options %>  
        </div>  
    </div>
</div>
