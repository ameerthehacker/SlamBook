<% if flash.count!=0 %>
    <% flash.each do |type, msg| %>
    <% if type == 'notice' %>
        <% type = 'success' %>
    <% elsif type == 'alert' %>
        <% type = 'danger' %>
    <% end %>
    <div class="row" style="margin-top:10px;">
        <div class="col-lg-12">
            <div class='<%="alert alert-dismissible alert-#{type}"%> text-center'>
                <a href="#" data-dismiss="alert" class="close">&times;</a>
                <%= msg %>
            </div>
        </div>
    </div>
    <% end %>
<% end %>